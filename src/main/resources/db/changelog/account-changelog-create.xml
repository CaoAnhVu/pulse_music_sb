<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!-- ChangeSet for User table -->
    <changeSet id="1" author="yourname">
        <createTable tableName="user">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="password" type="VARCHAR(80)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="full_name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="avatar_id" type="UUID"/>
            <column name="bio" type="VARCHAR(1000)"/>
            <column name="role" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP"/>
            <column name="enabled" type="BOOLEAN" defaultValueBoolean="true"/>
            <column name="count_fail" type="INT"/>
            <column name="lock_expired" type="TIMESTAMP"/>
            <column name="token_reset_password" type="VARCHAR(255)"/>
            <column name="token_reset_password_expired" type="TIMESTAMP"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet for CloudStorage table -->
    <changeSet id="2" author="yourname">
        <createTable tableName="cloud_storage">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="asset_id" type="VARCHAR(255)"/>
            <column name="public_id" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <!-- ChangeSet for Music table -->
    <changeSet id="3" author="yourname">
        <createTable tableName="music">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(200)"/>
            <column name="description" type="VARCHAR(2000)"/>
            <column name="duration" type="INT"/>
            <column name="play_count" type="INT"/>
            <column name="heart_count" type="INT"/>
            <column name="image_id" type="UUID"/>
            <column name="mp3_id" type="UUID"/>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="music"
                                 baseColumnNames="user_id"
                                 constraintName="fk_music_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="music"
                                 baseColumnNames="image_id"
                                 constraintName="fk_music_image"
                                 referencedTableName="cloud_storage"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="music"
                                 baseColumnNames="mp3_id"
                                 constraintName="fk_music_mp3"
                                 referencedTableName="cloud_storage"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for MusicType table -->
    <changeSet id="4" author="yourname">
        <createTable tableName="music_type">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="type_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- ChangeSet for MusicTypeUser table -->
    <changeSet id="5" author="yourname">
        <createTable tableName="music_type_user">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="music_type_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="music_type_user"
                                 baseColumnNames="user_id"
                                 constraintName="fk_music_type_user_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="music_type_user"
                                 baseColumnNames="music_type_id"
                                 constraintName="fk_music_type_user_music_type"
                                 referencedTableName="music_type"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for Otp table -->
    <changeSet id="6" author="yourname">
        <createTable tableName="user_otp">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(255)"/>
            <column name="expired_at" type="TIMESTAMP"/>
            <column name="user_id" type="UUID"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_otp"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_otp_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for Playlist table -->
    <changeSet id="7" author="yourname">
        <createTable tableName="playlist">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="music_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="playlist"
                                 baseColumnNames="user_id"
                                 constraintName="fk_playlist_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="playlist"
                                 baseColumnNames="music_id"
                                 constraintName="fk_playlist_music"
                                 referencedTableName="music"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for Track table -->
    <changeSet id="8" author="yourname">
        <createTable tableName="track">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="music_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="time_count" type="INT"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="track"
                                 baseColumnNames="music_id"
                                 constraintName="fk_track_music"
                                 referencedTableName="music"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="track"
                                 baseColumnNames="user_id"
                                 constraintName="fk_track_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for TrackType table -->
    <changeSet id="9" author="yourname">
        <createTable tableName="track_type">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="music_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="music_type_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="track_type"
                                 baseColumnNames="music_id"
                                 constraintName="fk_track_type_music"
                                 referencedTableName="music"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="track_type"
                                 baseColumnNames="user_id"
                                 constraintName="fk_track_type_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="track_type"
                                 baseColumnNames="music_type_id"
                                 constraintName="fk_track_type_music_type"
                                 referencedTableName="music_type"
                                 referencedColumnNames="id"/>
    </changeSet>

    <!-- ChangeSet for many-to-many relationships -->
    <changeSet id="10" author="yourname">
        <createTable tableName="user_liked_music">
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="music_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="user_liked_music"
                                 baseColumnNames="user_id"
                                 constraintName="fk_user_liked_music_user"
                                 referencedTableName="user"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="user_liked_music"
                                 baseColumnNames="music_id"
                                 constraintName="fk_user_liked_music_music"
                                 referencedTableName="music"
                                 referencedColumnNames="id"/>

        <createTable tableName="MusicTypes">
            <column name="music_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="music_type_id" type="UUID">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="MusicTypes"
                                 baseColumnNames="music_id"
                                 constraintName="fk_music_types_music"
                                 referencedTableName="music"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="MusicTypes"
                                 baseColumnNames="music_type_id"
                                 constraintName="fk_music_types_music_type"
                                 referencedTableName="music_type"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
